#!/bin/bash
lxc init headnode:gentle job$JOB_NUMBER
printf "uid 1777 0\ngid 1777 0" | lxc config set job$JOB_NUMBER raw.idmap -
lxc config device add job$JOB_NUMBER sda disk source=/snakepit path=snakepit
lxc file push gentle_run.sh job$JOB_NUMBER/root/
lxc start job$JOB_NUMBER
lxc exec job$JOB_NUMBER /root/gentle_run.sh
lxc stop job$JOB_NUMBER
lxc config device remove job$JOB_NUMBER sda
lxc delete job$JOB_NUMBER
